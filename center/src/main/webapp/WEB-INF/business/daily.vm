#set($layout="layout/emptylayout.vm")
#set($menuTitle="日结查询")

<div id="query"   title="查询条件" collapsible="true" class="easyui-panel search panel-body panel-body-noheader" style="border:0px;padding: 10px; width: 100%;" icon="icon-search">
    <table  width="550px">
        <tr>
            <th width="100px">
                选择油站：
            </th>
            <th width="150px">
                <input id="cc" name="cc"  class="easyui-combobox textbox" type="text"  style="width:150px" data-options="prompt:'--请选择--'"></input>
            </th>
            <th width="150px">
                <input id="aa" name="aa"  class="easyui-combobox textbox" type="text" style="width:150px" data-options="prompt:'--请选择--'"></input>
            </th>
            <th width="150px">
                <input id="ss" name="ss"  class="easyui-combobox textbox" type="text" style="width:150px" data-options="prompt:'--请选择--'"></input>
            </th>
        </tr>
        <tr>
            <th>
                起止日期：
            </th>
            <th colspan="3" align="left">
                <input id="dateStartinput" type="text" class="easyui-datebox" required="required"/> ——
                <input id="dateEndinput" type="text"  class="easyui-datebox" required="required"/>
            </th>

        </tr>

        <tr>
            <th></th>
            <th align="left" colspan="3">
                <a id="btnSelect" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'" onclick="initData()">查询</a>
                <a id="btnExport" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'" onclick="ExportExl()">导出</a>
            </th>

        </tr>
    </table>

</div>

<div id="result" class="easyui-panel">
    <table id="tt" class="easyui-datagrid">
    </table>
</div>

<script type="text/javascript">

    var cols=[[
        {field:'ouname',title:'油站名称',width:50,align:'center', rowspan:2
        },
        {field:'DarlyankStock',title:'上日罐存(帐存)',width:50,align:'center', rowspan:2
        },
        {title:'本日进货',colspan:2},
        {field:'TodayOut',title:'本日付出',width:50,align:'center', rowspan:2
        },
        {field:'TodayStock',title:'本日库存',width:50,align:'center', rowspan:2
        },
        {field:'RealStock',title:'实测库存',width:100,align:'center', rowspan:2
        },
        {field:'Loss',title:'损溢量',width:100,align:'center', rowspan:2
        },
        {field:'LossSent',title:'损溢率',width:100,align:'center', rowspan:2
        } ,

    ],[
        {field:'DeliveryNo',title:'出货单号',width:50},
        {field:'ReceiveL',title:'进货数量',width:50}

    ]
   ];
    var  start;
    var end;
    var oucode;
    var paras;
    $(function(){
        Loadcas("cc","aa","ss");
        var myDate = new Date();
        var MyTime=new Date();
        var time=MyTime.getFullYear() + "-" + (MyTime.getMonth()) + "-" + MyTime.getDate();
        $("#dateStartinput").datebox('setValue',time);
        $("#dateEndinput").datebox('setValue','<%=myDate.toLocaleDateString()%>');
        var heigth=$(window).height()-160;
        $("#result").height(heigth);
        initData();

    });


    function inittext(){
        start=$("#dateStartinput").datebox("getValue");
        end=$("#dateEndinput").datebox("getValue");
        var ss=$('#ss').combobox('getValue');
        var aa=$('#aa').combobox('getValue');
        var cc=$('#cc').combobox('getValue');
        oucode="";
        if(cc!="")
        {
            oucode=cc;
        }
        if(aa!="")
        {
            oucode=aa;
        }
        if(ss!="")
        {
            oucode=ss;
        }

        paras={ "start": start, "end":end, "oucode":oucode};
    }
    function ExportExl() {
        inittext();
        var filename=encodeURI(encodeURI("日结查询"));
        window.open("/web/alarm/excelBalance?start="+start+"&end="+end+"&oucode="+oucode+"&FileName="+filename);
    }
    function initData() {

        inittext();
        BindDataGridAjax('tt','日结查询','/web/alarm/getBalanceInfo',cols,paras,'true',10,[10,20,30]);

    }
    function formatDatebox(value) {
        if (value == null || value == '') {
            return '';
        }
        var dt;
        if (value instanceof Date) {
            dt = value;
        } else {
            dt = new Date(value);
        }

        return dt.format("yyyy-MM-dd hh:mm:ss"); //扩展的Date的format方法(上述插件实现)
    }



</script>